{
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
    "plugins": ["prettier"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "avoid",
                "semi": true,
                "trailingComma": "none",
                "endOfLine": "lf",
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 120,
                "bracketSpacing": true
            }
        ]
    }
}
